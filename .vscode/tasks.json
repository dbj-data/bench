{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CLANG_RELEASE_BUILD",
            "command": "${env:CLANGCL_BIN}clang-cl.exe",
            "args": [
                "/I${workspaceFolder}\\EASTL2020CORE\\include",
                "/nologo",
                "/GR-",
                "/Zc:wchar_t",
                "/std:c++17",
                "/D_HAS_EXCEPTIONS=0",
                "/DUNICODE",
                "/D_UNICODE",
                "/DDBJ_USE_UBENCH",
                "/DNDEBUG",
                "/MT",
                "/Fe${workspaceFolder}/bench.exe",
                "${workspaceFolder}/dbj-fwk/main.cpp",
                "${workspaceFolder}/program.cpp",
                "${workspaceFolder}\\units\\*.c",
                "${workspaceFolder}\\units\\*.cpp",
                "${workspaceFolder}\\EASTL2020CORE\\source\\*.cpp",
                "${workspaceFolder}\\zallocators\\*.cpp",
                "${workspaceFolder}\\zallocators\\kalloc\\kalloc.c",
                "${workspaceFolder}\\zallocators\\nedmalloc\\nedmalloc.c",
                "${workspaceFolder}\\zallocators\\nvwa\\*.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "make sure .vscode/addclang.cmd was started"
        },
        {
            "type": "shell",
            "label": "CLANG_DEBUG_BUILD",
            "command": "${env:CLANGCL_BIN}clang-cl.exe",
            "args": [
                "/I${workspaceFolder}\\EASTL2020CORE\\include",
                "/std:c++17",
                "/D_HAS_EXCEPTIONS=0",
                "/DUNICODE",
                "/D_UNICODE",
                "/D_DEBUG",
                "/DDBJ_USE_UBENCH",
                "/Zc:wchar_t",
                "/Zi",
                "/MTd",
                "/Fe${workspaceFolder}/bench_dbg.exe",
                "${workspaceFolder}/dbj-fwk/main.cpp",
                "${workspaceFolder}/program.cpp",
                "${workspaceFolder}\\units\\*.c",
                "${workspaceFolder}\\units\\*.cpp",
                "${workspaceFolder}\\EASTL2020CORE\\source\\*.cpp",
                "${workspaceFolder}\\zallocators\\*.cpp",
                "${workspaceFolder}\\zallocators\\kalloc\\kalloc.c",
                "${workspaceFolder}\\zallocators\\nedmalloc\\nedmalloc.c",
                "${workspaceFolder}\\zallocators\\nvwa\\*.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "make sure .vscode/addclang.cmd was started"
        },
        {
            "type": "shell",
            "label": "CLEAN",
            "command": "del /S /Q",
            "args": [
                "${workspaceFolder}\\*pdb",
                "${workspaceFolder}\\*obj",
                "${workspaceFolder}\\*ilk"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Delete *ALL*, *pdb *obj and *ilk files found"
        },
        {
            "type": "shell",
            "label": "CLANG-CL",
            "command": "@echo %CLANGCL_BIN%",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "display CLANGCL_BIN",
            "problemMatcher": []
        }
    ]
}